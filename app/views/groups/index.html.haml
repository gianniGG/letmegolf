.container
  .row
    .col-xs-3
      %ul.nav.nav-pills.nav-stacked
        %li= link_to "New group", new_group_path
    .col-xs-9
      .jumbotron
        %ul#group-index
          -@groups.sort_by{|grp| grp.points}.each do |grp|
            %li
              %span#group-name=grp.name
              Leader:
              =grp.leader
              Total points:
              =grp.points
              %br