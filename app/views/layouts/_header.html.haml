.container#navigation-id
  %ul.nav.nav-pills
    %li.active= link_to "LetMeGolf", root_path, class: 'logo'
    %li.singleplay= link_to "Single Play", singleplay_path
    %li.signin= link_to "Sign in", signin_path unless signed_in? current_user
    %li.signup= link_to "Sign up", signup_path unless signed_in? current_user
    - if signed_in? current_user
      %li.multiplayer= link_to "Multiplayer", multiplayer_path
      %li.compete= link_to "Compete", compete_path
      %li.social= link_to "Social", social_path
      %li.dropdown
        %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#', onclick: 'return false' }
          Account
          %span.caret
        %li.dropdown-menu{'data-timeout' => 'dropdown'}
          =link_to user_path(current_user) do
            Profile
            %span.pull-right#profile-image
              =image_tag "/assets/golfer.png", size: "15x23"
          =link_to statistics_path do
            Statistics
            %span.glyphicon.glyphicon-signal.pull-right
          =link_to edit_user_path(current_user) do
            Settings
            %span.glyphicon.glyphicon-wrench.pull-right
          =link_to user_messages_path(current_user) do
            Inbox
            %span.badge.pull-right 123
          =link_to signout_path, method: "delete" do
            Sign Out
            %span.glyphicon.glyphicon-send.pull-right




